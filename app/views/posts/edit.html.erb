<div class="edit-box">

<h2>Editing Books</h2>
<%= form_for(@post) do |f| %>
    <label>Title<label><br>
    <%= f.text_field :title,class:"book_title"%><br>
    <label>Body</label><br>
    <%= f.text_area :body,class:"book_body"%><br>
    <%= f.submit 'Update Book' %>
<% end %><br>
 <%=link_to "show",post_path(@post),class:"show_#{@post.id}"%>
 <%= link_to "Back", books_path,class:"back"%>
</div>